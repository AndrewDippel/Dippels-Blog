{{#each posts as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{project.id}}">{{project.title}}</a>
    </h2>
    <p>Created by {{project.user.name}} on {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}
{{#if logged_in}}
<div class="form-group">
  <button class="btn btn-primary" id="newPost">Add post</button>
</div>
<div class="text-center hidden">
  <div class="form-group">
    <label for="title">title:</label>
    <input class="form-input" type="text" id="title" />
    <label for="content">content:</label>
    <input class="form-input" type="text" id="content" />
  </div>
  <br <p>
  <button class="btn btn-primary" id="savePost">save post</button>
  </p>
</div>

<script src="js/dashboard.js"></script>
{{/if}}