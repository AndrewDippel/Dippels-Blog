<div class="text-center">
  {{!-- display comment section --}}
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#each comment as |comments|}}
  <div class="comments">
    <h2>commented by: {{comments.user.name}}</h2>
    <h2>date commented: {{format_date comments.date_created}}</h2>
    <p>
      {{comments.comment}}
    </p>
  </div>
  {{/each}}
  {{#if logged_in}}
  <div class="form-group">
    <label for="comment">comment:</label>
    <input class="form-input" type="text" id="comment">
    <br <p>
    <button class="btn btn-primary" id="saveComment">Add comment</button>
    </p>
  </div>
  {{/if}}
</div>

<script src="/js/comment.js"></script>