<div class="text-center">
  {{!-- display comment section --}}
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#each comments as |comment|}}
  <div class="row mb-4 project">
    <div class="col-md-5">
      <h2>
        <p>commented by: {{comment.user.name}}</p>
      </h2>
      <p>commented date: {{format_date comment.date_created}} </p>
    </div>
    <div class="col-md-7">
      <p>
        {{comment.comment}}
      </p>

    </div>
  </div>
  {{/each}}
  {{#if logged_in}}
  <div class="form-group addComment">
    <label for="comment">Comment:</label>
    <textarea class="form-input" type="text" id="comment"></textarea>
    <br <p>
    <button class="btn btn-primary" id="saveComment">Add comment</button>
    </p>
  </div>
  {{/if}}
</div>

<script src="/js/comment.js"></script>