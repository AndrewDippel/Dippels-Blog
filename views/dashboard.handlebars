{{#each posts as |project| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{project.id}}">{{project.title}}</a>
    </h2>
    <p>Created by {{project.user.name}} on {{format_date project.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
    <div>
      <button class="btn btn-primary" id="editPost">Edit post</button>
      <button class="btn btn-primary" id="deletePost" data-id="{{project.id}}">Delete post</button>
      <br>
    </div>
  </div>
</div>
{{/each}}
{{#if logged_in}}
<div class="form-group">
  <button class="btn btn-primary" id="newPost">Add post</button>
</div>
<div class="text-center hidden addPost">
  <div class="form-group">
    <label id="inputlabel" for="title">Title:</label>
    <input class="form-input" type="text" id="title" />
    <br>
    <br>
    <label id="inputlabel" for="content">Content:</label>
    <textarea class="form-input" type="text" id="content"></textarea>
  </div>
  <br <p>
  <button class="btn btn-primary" id="savePost">save post</button>
  </p>
</div>
{{/if}}

<script src="js/dashboard.js"></script>